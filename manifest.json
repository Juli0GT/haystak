{
  "manifest_version": 2,

  "name": "Haysta:K",
  "description": "This extension helps developers efficiently find answers to FAQ's & PAQ's",
  "version": "1.0",

  "content_scripts": [
  {
    "matches": [
      "<all_urls>"
    ],
    "js": ["jquery.js", "content.js", "popup.js"]
  }
],

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html",
    "default_title": "Click here!"
  },
  "background" :{
    "scripts": [
      "background.js"
    ],
    "persistent": false
  },

  "permissions": [
    "*://*.google.com/*",
    "activeTab",
    "tabs",
    "https://ajax.googleapis.com/",
    "storage"
  ]

}
